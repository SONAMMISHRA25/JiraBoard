{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,  // REQUIRED FOR ANGULAR
    "moduleResolution": "node",  // "bundler" should be "node"
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",  // Use "ESNext" for better support
    "baseUrl": "./src",  // REQUIRED FOR ABSOLUTE IMPORTS
    "paths": {
      "@app/*": ["app/*"]  // ALLOW SHORTHAND IMPORTS
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
